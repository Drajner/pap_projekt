<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.iipw.pap.LoggerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TableView prefHeight="350.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn maxWidth="60.0" minWidth="20.0" prefWidth="30.0" text="Nr" />
          <TableColumn maxWidth="240.0" minWidth="90.0" prefWidth="120.0" text="Data i godzina" />
            <TableColumn maxWidth="780.0" minWidth="145.0" prefWidth="390.0" text="Imię i Nazwisko Pacjenta" />
            <TableColumn maxWidth="600.0" minWidth="50.0" prefWidth="60.0" text="Gabinet" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <GridPane alignment="BOTTOM_CENTER" minHeight="60.0" prefHeight="60.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button minHeight="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Dodaj Pacjenta" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Button minHeight="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Edytuj Pacjentów" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Button minHeight="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Usuń Pacjenta" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Button minHeight="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Dodaj Wizytę" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Button minHeight="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Edytuj Wizytę" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Button minHeight="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Usuń Wizytę" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
         </children>
      </GridPane>
   </children>
</VBox>
